<div class= "container roomshow">
  <div class= "row">
    <div class= "col-md-8">
      <img onerror="this.src='/assets/default_icon.jpeg';" alt= "部屋画像" class= "room-show-image" src= "assets/img_kyoto.jpeg">
      <div class= "room-show-detile">
        <div class= "room-show-detile">
          <div class= "room-show-detile-icon">
            <img onerror="this.src='/assets/default_icon.jpeg';" alt= "部屋画像" class= "room-show-image" src= "assets/img_kyoto.jpeg">
          </div>
          <div class= "room-show-profile">
            <p class="room-show-profile-name"><%= @room.name %></p>
            <p class="room-show-profile-address"><%= @room.address %></p>
          </div>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.introduction %></p>
    </div>
    <div class= "col-md-4">
      <div class= "room-show-nav">
        <h5 class= "price-icon"><%= @room.price %>円/ 日</h5>

        <div class= "room-show-date-select">
          <%= form_with model: @reserve do |f| %>
            <table>
              <tr>
                <th><%= f.label :start_date ,"開始日" %></th>
                <td><%= f.date_field :start_date %></td>
              </tr>

              <tr>
                <th><%= f.label :end_date ,"終了日" %></th>
                <td><%= f.date_field :end_date %></td>
              </tr>

              <tr>
                <th><%= f.label :person_num ,"人数" %></th>
                <td><%= f.number_field :person_num %></td>
              </tr>
            </table>

            <div>
              <ul>
                <li><%= f.submit "登録完了する"%></li>
              </ul>
            </div>
          <% end %>
        </div>

    </div>
    
  </div>
</div>