<div class= "container-fiuld room">
  <h4>検索結果4人</h4>
	<div class= "row">
		<% @rooms.each do |room| %>
			<div class= "col-sm-6 col-lg-4 col-xl-3">
				<div class= "room-frame-inner">
					<a href= "http://127.0.0.1:3000/rooms/<%= room.id %>">
					<div class="room-image-out">
						<img onerror= "this.onerror=null;this.src='/assets/room01.jpg';" alt= "部屋画像" class= "room-image" <%= image_tag "#{room.image.url}" %>
					</div>
					<div class= "room-profile">
						<p class="room-profile-name"><%= room.name %></p>
						<p class="room-profile-city"><%= room.introduction %></p>
						<p class="room-profile-price">￥<%= room.price %></p>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>